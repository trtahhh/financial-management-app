<!-- Modern Categories Page -->

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Quản Lý Danh Mục</h2>
        <p class="text-secondary mb-0">
            <i class="bi bi-info-circle me-1"></i>
            Hệ thống sử dụng 14 danh mục cố định với AI tự động phân loại
        </p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stats-card">
            <div class="stats-icon bg-primary">
                <i class="bi bi-grid"></i>
            </div>
            <div>
                <div class="stats-value" id="totalCategories">0</div>
                <div class="stats-label">Tổng Danh Mục</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="stats-icon bg-success">
                <i class="bi bi-arrow-down"></i>
            </div>
            <div>
                <div class="stats-value" id="incomeCategories">0</div>
                <div class="stats-label">Thu Nhập</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="stats-icon bg-danger">
                <i class="bi bi-arrow-up"></i>
            </div>
            <div>
                <div class="stats-value" id="expenseCategories">0</div>
                <div class="stats-label">Chi Tiêu</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card">
            <div class="stats-icon bg-warning">
                <i class="bi bi-star"></i>
            </div>
            <div>
                <div class="stats-value" id="popularCategory">--</div>
                <div class="stats-label">Phổ Biến Nhất</div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <a class="nav-link active" data-filter="all" href="#" onclick="filterCategories('all'); return false;">
            <i class="bi bi-grid"></i>
            Tất Cả
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-filter="income" href="#" onclick="filterCategories('income'); return false;">
            <i class="bi bi-arrow-down-circle"></i>
            Thu Nhập
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-filter="expense" href="#" onclick="filterCategories('expense'); return false;">
            <i class="bi bi-arrow-up-circle"></i>
            Chi Tiêu
        </a>
    </li>
</ul>

<!-- Categories Grid -->
<div class="row g-4" id="categoriesContainer">
    <div class="col-12 text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <div class="mt-2 text-secondary">Đang tải danh mục...</div>
    </div>
</div>

<!-- Add/Edit Category Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-gradient text-white">
                <h5 class="modal-title">
                    <i class="bi bi-tag"></i>
                    <span id="modalTitle">Thêm Danh Mục</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="categoryForm">
                    <input type="hidden" id="categoryId">
                    
                    <div class="mb-3">
                        <label class="form-label fw-medium">Tên Danh Mục *</label>
                        <input type="text" class="form-control" id="categoryName" placeholder="Ví dụ: Ăn uống, Lương" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-medium">Loại *</label>
                        <select class="form-control" id="categoryType" required>
                            <option value="">Chọn loại</option>
                            <option value="income">Thu Nhập</option>
                            <option value="expense">Chi Tiêu</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-medium">Icon</label>
                        <div class="row g-2" id="iconSelector">
                            <!-- Icons will be populated here -->
                        </div>
                        <input type="hidden" id="categoryIcon" value="bi-tag">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-medium">Màu Sắc</label>
                        <div class="d-flex gap-2 flex-wrap">
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #22c55e;" 
                                    onclick="selectColor('#22c55e')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #3b82f6;" 
                                    onclick="selectColor('#3b82f6')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #ef4444;" 
                                    onclick="selectColor('#ef4444')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #f59e0b;" 
                                    onclick="selectColor('#f59e0b')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #a855f7;" 
                                    onclick="selectColor('#a855f7')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #ec4899;" 
                                    onclick="selectColor('#ec4899')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #14b8a6;" 
                                    onclick="selectColor('#14b8a6')"></button>
                            <button type="button" class="btn btn-sm border rounded-circle color-btn" 
                                    style="width: 40px; height: 40px; background: #6b7280;" 
                                    onclick="selectColor('#6b7280')"></button>
                        </div>
                        <input type="hidden" id="categoryColor" value="#22c55e">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-medium">Mô Tả</label>
                        <textarea class="form-control" id="categoryDescription" rows="3" placeholder="Mô tả về danh mục"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveCategory()">
                    <i class="bi bi-check-lg"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i>
                    Xác Nhận Xóa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa danh mục "<strong id="deleteCategoryName"></strong>"?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <small>Các giao dịch liên quan sẽ không bị xóa nhưng sẽ không có danh mục.</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <i class="bi bi-trash"></i>
                    Xóa
                </button>
            </div>
        </div>
    </div>
</div>

<script>
const icons = [
    'bi-tag', 'bi-wallet2', 'bi-cart', 'bi-house', 'bi-car-front', 'bi-cup-hot',
    'bi-bag', 'bi-heart', 'bi-gift', 'bi-phone', 'bi-laptop', 'bi-train-front',
    'bi-airplane', 'bi-hospital', 'bi-book', 'bi-music-note', 'bi-controller',
    'bi-trophy', 'bi-briefcase', 'bi-cash-coin', 'bi-credit-card', 'bi-piggy-bank'
];

let categories = [];
let currentFilter = 'all';
let categoryToDelete = null;

document.addEventListener('DOMContentLoaded', function() {
    loadCategories();
    initIconSelector();
});

// Load Categories
async function loadCategories() {
    try {
        const token = localStorage.getItem('accessToken');
        const response = await fetch('/api/categories', {
            headers: {
                'Authorization': `Bearer ${token}`
            }
        });
        
        if (response.ok) {
            const data = await response.json();
            // Handle both direct array and Spring Page object formats
            if (Array.isArray(data)) {
                categories = data;
            } else if (data.content && Array.isArray(data.content)) {
                // Spring Boot Page response
                categories = data.content;
            } else if (data.data && Array.isArray(data.data)) {
                categories = data.data;
            } else {
                console.error('Expected array but got:', data);
                throw new Error('Invalid response format');
            }
            updateStats();
            renderCategories();
        } else {
            throw new Error('Failed to load categories');
        }
    } catch (error) {
        console.error('Error loading categories:', error);
        document.getElementById('categoriesContainer').innerHTML = `
            <div class="col-12 text-center py-5">
                <i class="bi bi-exclamation-circle text-danger" style="font-size: 3rem;"></i>
                <p class="mt-3 text-secondary">Không thể tải danh mục. Vui lòng thử lại.</p>
            </div>
        `;
    }
}

// Update Stats
function updateStats() {
    const total = categories.length;
    const income = categories.filter(c => c.type === 'income').length;
    const expense = categories.filter(c => c.type === 'expense').length;
    
    document.getElementById('totalCategories').textContent = total;
    document.getElementById('incomeCategories').textContent = income;
    document.getElementById('expenseCategories').textContent = expense;
    
    // Find most popular (mock - would need transaction data)
    if (categories.length > 0) {
        document.getElementById('popularCategory').textContent = categories[0].name;
    }
}

// Render Categories
function renderCategories() {
    const container = document.getElementById('categoriesContainer');
    
    let filtered = categories;
    if (currentFilter === 'income') {
        filtered = categories.filter(c => c.type === 'income');
    } else if (currentFilter === 'expense') {
        filtered = categories.filter(c => c.type === 'expense');
    }
    
    if (filtered.length === 0) {
        container.innerHTML = `
            <div class="col-12 text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--neutral-300);"></i>
                <p class="mt-3 text-secondary">Không tìm thấy danh mục phù hợp</p>
            </div>
        `;
        return;
    }
    
    container.innerHTML = filtered.map(category => `
        <div class="col-md-6 col-lg-4">
            <div class="card card-bordered card-hover">
                <div class="card-body">
                    <div class="d-flex align-items-start">
                        <div class="me-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 56px; height: 56px; background: ${category.color || '#22c55e'}20;">
                                <i class="bi ${category.icon || 'bi-tag'} fs-3" style="color: ${category.color || '#22c55e'};"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">${category.name}</h6>
                            <span class="badge ${category.type === 'income' ? 'badge-success' : 'badge-danger'} badge-sm">
                                <i class="bi ${category.type === 'income' ? 'bi-arrow-down' : 'bi-arrow-up'}"></i>
                                ${category.type === 'income' ? 'Thu Nhập' : 'Chi Tiêu'}
                            </span>
                            ${category.description ? `<p class="text-secondary small mt-2 mb-0">${category.description}</p>` : ''}
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-3">
                        <button class="btn btn-sm btn-outline-primary flex-grow-1" onclick="editCategory(${category.id})">
                            <i class="bi bi-pencil"></i>
                            Sửa
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="showDeleteModal(${category.id})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    `).join('');
}

// Filter Categories
function filterCategories(filter) {
    currentFilter = filter;
    
    // Update active tab
    document.querySelectorAll('.nav-pills .nav-link').forEach(link => {
        link.classList.remove('active');
    });
    document.querySelector(`[data-filter="${filter}"]`).classList.add('active');
    
    renderCategories();
}

// Show Category Modal
function showCategoryModal(category = null) {
    const modal = new bootstrap.Modal(document.getElementById('categoryModal'));
    
    if (category) {
        document.getElementById('modalTitle').textContent = 'Sửa Danh Mục';
        document.getElementById('categoryId').value = category.id;
        document.getElementById('categoryName').value = category.name;
        document.getElementById('categoryType').value = category.type;
        document.getElementById('categoryIcon').value = category.icon || 'bi-tag';
        document.getElementById('categoryColor').value = category.color || '#22c55e';
        document.getElementById('categoryDescription').value = category.description || '';
        
        // Update selected icon
        selectIcon(category.icon || 'bi-tag');
        selectColor(category.color || '#22c55e');
    } else {
        document.getElementById('modalTitle').textContent = 'Thêm Danh Mục';
        document.getElementById('categoryForm').reset();
        document.getElementById('categoryId').value = '';
        document.getElementById('categoryIcon').value = 'bi-tag';
        document.getElementById('categoryColor').value = '#22c55e';
        
        // Reset selections
        document.querySelectorAll('.icon-btn').forEach(btn => btn.classList.remove('active'));
        document.querySelectorAll('.color-btn').forEach(btn => btn.classList.remove('active'));
    }
    
    modal.show();
}

// Edit Category
function editCategory(id) {
    const category = categories.find(c => c.id === id);
    if (category) {
        showCategoryModal(category);
    }
}

// Init Icon Selector
function initIconSelector() {
    const container = document.getElementById('iconSelector');
    container.innerHTML = icons.map(icon => `
        <div class="col-2">
            <button type="button" class="btn btn-outline-primary btn-sm w-100 icon-btn" 
                    style="aspect-ratio: 1; padding: 0;" 
                    onclick="selectIcon('${icon}')">
                <i class="bi ${icon}"></i>
            </button>
        </div>
    `).join('');
}

// Select Icon
function selectIcon(icon) {
    document.getElementById('categoryIcon').value = icon;
    document.querySelectorAll('.icon-btn').forEach(btn => btn.classList.remove('active'));
    event.target.closest('.icon-btn')?.classList.add('active');
}

// Select Color
function selectColor(color) {
    document.getElementById('categoryColor').value = color;
    document.querySelectorAll('.color-btn').forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');
}

// Save Category
async function saveCategory() {
    const form = document.getElementById('categoryForm');
    if (!form.checkValidity()) {
        form.reportValidity();
        return;
    }
    
    const id = document.getElementById('categoryId').value;
    const data = {
        name: document.getElementById('categoryName').value,
        type: document.getElementById('categoryType').value,
        icon: document.getElementById('categoryIcon').value,
        color: document.getElementById('categoryColor').value,
        description: document.getElementById('categoryDescription').value
    };
    
    try {
        const token = localStorage.getItem('accessToken');
        const url = id ? `/api/categories/${id}` : '/api/categories';
        const method = id ? 'PUT' : 'POST';
        
        const response = await fetch(url, {
            method: method,
            headers: {
                'Authorization': `Bearer ${token}`,
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });
        
        if (response.ok) {
            bootstrap.Modal.getInstance(document.getElementById('categoryModal')).hide();
            loadCategories();
        } else {
            const error = await response.json();
            alert('Lỗi: ' + (error.message || 'Không thể lưu danh mục'));
        }
    } catch (error) {
        console.error('Error saving category:', error);
        alert('Đã xảy ra lỗi khi lưu danh mục');
    }
}

// Show Delete Modal
function showDeleteModal(id) {
    const category = categories.find(c => c.id === id);
    if (!category) return;
    
    categoryToDelete = id;
    document.getElementById('deleteCategoryName').textContent = category.name;
    
    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

// Confirm Delete
async function confirmDelete() {
    if (!categoryToDelete) return;
    
    try {
        const token = localStorage.getItem('accessToken');
        const response = await fetch(`/api/categories/${categoryToDelete}`, {
            method: 'DELETE',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        });
        
        if (response.ok) {
            bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
            loadCategories();
        } else {
            const error = await response.json();
            alert('Lỗi: ' + (error.message || 'Không thể xóa danh mục'));
        }
    } catch (error) {
        console.error('Error deleting category:', error);
        alert('Đã xảy ra lỗi khi xóa danh mục');
    }
}
</script>

