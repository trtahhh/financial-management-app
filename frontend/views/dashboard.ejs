    <div class="col-md-4">
      <label for="dash-month">Chọn tháng</label>
      <input type="month" id="dash-month" class="form-control"
             value="<%= new Date().toISOString().slice(0,7) %>">
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <b>Tổng thu:</b> <span id="totalIncome"></span>
       | 
      <b>Tổng chi:</b> <span id="totalExpense"></span>
       | 
      <b>Số dư:</b> <span id="balance"></span>
    </div>
  </div>

