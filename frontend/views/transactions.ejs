<main class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="text-success fw-bold mb-1">Giao dịch</h2>
          <p class="text-muted mb-0">Quản lý tất cả giao dịch thu chi</p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <button id="ocrBtn" class="btn btn-outline-success" onclick="triggerOcr()" title="Quét hóa đơn từ ảnh">
            Quét hóa đơn
          </button>
          <button id="addBtn" class="btn btn-success" onclick="showAddModal()">
            + Thêm giao dịch
          </button>
        </div>
      </div>

      <input id="ocrFileInput" type="file" accept="image/*" style="display:none" />

      <!-- Filter Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body py-3">
          <div class="row g-3">
            <div class="col-md-3">
              <label class="form-label text-muted small">Danh mục</label>
              <select id="tx-filter" class="form-select">
                <option value="">Tất cả danh mục</option>
                <option value="Ăn uống">Ăn uống</option>
                <option value="Di chuyển">Di chuyển</option>
                <option value="Mua sắm">Mua sắm</option>
                <option value="Giải trí">Giải trí</option>
                <option value="Học tập">Học tập</option>
                <option value="Y tế">Y tế</option>
                <option value="Lương">Lương</option>
                <option value="Khác">Khác</option>
              </select>
            </div>
            <div class="col-md-3">
              <label class="form-label text-muted small">Loại giao dịch</label>
              <select id="type-filter" class="form-select">
                <option value="">Tất cả loại</option>
                <option value="income">Thu nhập</option>
                <option value="expense">Chi tiêu</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      <!-- Transaction Table -->
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table id="tx-table" class="table table-hover mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="border-0 text-muted small fw-semibold">Ngày</th>
                  <th class="border-0 text-muted small fw-semibold">Loại</th>
              <th class="border-0 text-muted small fw-semibold">Danh mục</th>
                  <th class="border-0 text-muted small fw-semibold">Số tiền</th>
                  <th class="border-0 text-muted small fw-semibold">Ghi chú</th>
                  <th class="border-0 text-muted small fw-semibold">Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="6" class="text-center py-5">
                <div class="text-muted">Đang tải dữ liệu...</div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
    </div>
  </div>
</main>

<!-- Add/Edit Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Thêm giao dịch</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="tx-form">
          <input type="hidden" id="txId" name="id">
          
          <div class="mb-3">
            <label class="form-label">Ngày giao dịch</label>
            <input type="date" name="date" class="form-control" required>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Loại giao dịch</label>
            <select name="type" class="form-select" required>
              <option value="">Chọn loại</option>
              <option value="income">Thu nhập</option>
              <option value="expense">Chi tiêu</option>
            </select>
          </div>

          <!-- AI Auto-suggested Category (3-Layer System) -->
          <input type="hidden" name="category" id="suggestedCategoryId">
          <div class="mb-3">
            <label class="form-label">
              <i class="fas fa-robot text-success me-1"></i>
              <strong>Danh mục (AI 3 lớp tự động)</strong>
              <span class="badge bg-info ms-2" id="aiLayerBadge" style="display: none;">Layer 1</span>
            </label>
            
            <!-- Primary AI Suggestion -->
            <div class="input-group mb-2">
              <span class="input-group-text bg-success text-white">
                <i class="fas fa-star"></i>
              </span>
              <input type="text" id="suggestedCategoryName" class="form-control fw-bold" readonly 
                     placeholder="AI đang chờ bạn nhập ghi chú..." 
                     style="background-color: #f8f9fa; font-size: 1.05rem;">
              <span class="input-group-text" id="categoryConfidence" style="display: none; background-color: #d1e7dd;">
                <i class="fas fa-check-circle text-success"></i>
              </span>
            </div>
            
            <!-- AI Reasoning & Layer Info -->
            <div id="aiReasoningBox" class="alert alert-light border-start border-4 border-info mb-2 shadow-sm" style="display: none; font-size: 0.9rem;">
              <div class="d-flex align-items-start">
                <i class="fas fa-brain text-info me-2 mt-1" style="font-size: 1.2rem;"></i>
                <div class="flex-grow-1">
                  <strong class="text-primary">
                    <i class="fas fa-lightbulb"></i> Lý do AI chọn:
                  </strong>
                  <p class="mb-2 mt-1" id="aiReasoning" style="line-height: 1.6;">...</p>
                  <div class="d-flex gap-2 flex-wrap mt-2">
                    <span class="badge bg-primary shadow-sm" id="layer1Badge" style="display: none; padding: 0.4rem 0.6rem;">
                      <i class="fas fa-layer-group"></i> Layer 1: SVM + TF-IDF
                    </span>
                    <span class="badge bg-warning text-dark shadow-sm" id="layer2Badge" style="display: none; padding: 0.4rem 0.6rem;">
                      <i class="fas fa-user-check"></i> Layer 2: User History
                    </span>
                    <span class="badge bg-danger shadow-sm" id="layer3Badge" style="display: none; padding: 0.4rem 0.6rem;">
                      <i class="fas fa-chart-line"></i> Layer 3: RandomForest + XGBoost
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Alternative Suggestions -->
            <div id="alternativeSuggestions" style="display: none;">
              <label class="form-label small text-muted mb-1">
                <i class="fas fa-lightbulb text-warning"></i> Hoặc chọn gợi ý khác:
              </label>
              <div id="suggestionsList" class="d-flex gap-2 flex-wrap"></div>
            </div>
            
            <small class="text-muted d-block mt-2 p-2 bg-light rounded" id="categoryHint" style="line-height: 1.6;">
              <i class="fas fa-info-circle text-info"></i> 
              <strong>AI 3-Layer System:</strong> SVM + TF-IDF → User History → RandomForest + XGBoost
              <br>Nhập ghi chú và số tiền để AI tự động phân loại
            </small>
          </div>

          <div class="mb-3">
            <label class="form-label">Ví tiền</label>
            <select name="wallet" class="form-select" required>
              <option value="">Chọn ví</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Số tiền (VND)</label>
            <input type="number" name="amount" class="form-control" placeholder="0" required min="0">
          </div>
          
          <div class="mb-3">
            <label class="form-label">Ghi chú</label>
            <textarea name="note" class="form-control" rows="3" placeholder="Nhập ghi chú (tùy chọn)"></textarea>
          </div>
          <div id="ocr-image-preview-wrapper" class="mb-3 d-none">
            <label class="form-label">Ảnh hóa đơn đã quét</label>
            <div class="border rounded p-2 text-center">
              <img id="ocr-image-preview" alt="Ảnh hóa đơn" style="max-width:100%;max-height:240px;object-fit:contain;" />
              <div>
                <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="openFullOcrImage()">Mở lớn</button>
                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="clearOcrImagePreview()">Ẩn ảnh</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-success" onclick="saveTransaction()">
          Lưu
        </button>
      </div>
      </div>
    </div>
  </div>
</div>

<!-- Transaction Scripts (includes AI auto-categorization) -->
<script src="/js/transactions.js"></script>
