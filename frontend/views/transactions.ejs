<main class="container py-4">
  <h2 class="mb-4">Danh sách giao dịch</h2>
  <form id="tx-form" enctype="multipart/form-data" class="row g-2 mb-4">
    <div class="col-md-2">
      <input type="date" name="date" class="form-control" required>
    </div>
    <div class="col-md-3">
      <input type="text" name="category" class="form-control" placeholder="Danh mục" required>
    </div>
    <div class="col-md-3">
      <input type="number" name="amount" class="form-control" placeholder="Số tiền" required>
    </div>
    <div class="col-md-2">
      <input type="file" name="file" class="form-control">
    </div>
    <div class="col-md-2">
      <button class="btn btn-success w-100">Thêm</button>
    </div>
  </form>
  <select id="tx-filter" class="form-select w-auto mb-3"><option value="">Tất cả</option></select>
  <table id="tx-table" class="table table-striped"></table>
</main>
<script src="/js/transactions.js"></script>
