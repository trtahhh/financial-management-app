<main class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="text-success fw-bold mb-1">Giao dịch</h2>
          <p class="text-muted mb-0">Quản lý tất cả giao dịch thu chi</p>
        </div>
        <div class="d-flex align-items-center gap-2">
          <button id="ocrBtn" class="btn btn-outline-success" onclick="triggerOcr()" title="Quét hóa đơn từ ảnh">
            Quét hóa đơn
          </button>
          <button id="addBtn" class="btn btn-success" onclick="showAddModal()">
            + Thêm giao dịch
          </button>
        </div>
      </div>

      <input id="ocrFileInput" type="file" accept="image/*" style="display:none" />

      <!-- Filter Section -->
      <div class="card shadow-sm mb-4">
        <div class="card-body py-3">
          <div class="row g-3">
            <div class="col-md-3">
              <label class="form-label text-muted small">Danh mục</label>
              <select id="tx-filter" class="form-select">
                <option value="">Tất cả danh mục</option>
                <option value="Ăn uống">Ăn uống</option>
                <option value="Di chuyển">Di chuyển</option>
                <option value="Mua sắm">Mua sắm</option>
                <option value="Giải trí">Giải trí</option>
                <option value="Học tập">Học tập</option>
                <option value="Y tế">Y tế</option>
                <option value="Lương">Lương</option>
                <option value="Khác">Khác</option>
              </select>
            </div>
            <div class="col-md-3">
              <label class="form-label text-muted small">Loại giao dịch</label>
              <select id="type-filter" class="form-select">
                <option value="">Tất cả loại</option>
                <option value="income">Thu nhập</option>
                <option value="expense">Chi tiêu</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      <!-- Transaction Table -->
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table id="tx-table" class="table table-hover mb-0">
              <thead class="bg-light">
                <tr>
                  <th class="border-0 text-muted small fw-semibold">Ngày</th>
                  <th class="border-0 text-muted small fw-semibold">Loại</th>
              <th class="border-0 text-muted small fw-semibold">Danh mục</th>
                  <th class="border-0 text-muted small fw-semibold">Số tiền</th>
                  <th class="border-0 text-muted small fw-semibold">Ghi chú</th>
                  <th class="border-0 text-muted small fw-semibold">Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="6" class="text-center py-5">
                <div class="text-muted">Đang tải dữ liệu...</div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
    </div>
  </div>
</main>

<!-- Add/Edit Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Thêm giao dịch</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="tx-form">
          <input type="hidden" id="txId" name="id">
          
          <div class="mb-3">
            <label class="form-label">Ngày giao dịch</label>
            <input type="date" name="date" class="form-control" required>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Loại giao dịch</label>
            <select name="type" class="form-select" required>
              <option value="">Chọn loại</option>
              <option value="income">Thu nhập</option>
              <option value="expense">Chi tiêu</option>
            </select>
          </div>

          <!-- AI Auto-suggested Category (Read-only) -->
          <input type="hidden" name="category" id="suggestedCategoryId">
          <div class="mb-3">
            <label class="form-label">
              <i class="fas fa-robot text-success me-1"></i>Danh mục (AI gợi ý tự động)
            </label>
            <div class="input-group">
              <input type="text" id="suggestedCategoryName" class="form-control" readonly 
                     placeholder="Nhập ghi chú để AI gợi ý danh mục..." 
                     style="background-color: #f8f9fa;">
              <span class="input-group-text" id="categoryConfidence" style="display: none;">
                <i class="fas fa-check-circle text-success"></i>
              </span>
            </div>
            <small class="text-muted" id="categoryHint">AI sẽ tự động phân loại sau khi bạn nhập ghi chú</small>
          </div>

          <div class="mb-3">
            <label class="form-label">Ví tiền</label>
            <select name="wallet" class="form-select" required>
              <option value="">Chọn ví</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Số tiền (VND)</label>
            <input type="number" name="amount" class="form-control" placeholder="0" required min="0">
          </div>
          
          <div class="mb-3">
            <label class="form-label">Ghi chú</label>
            <textarea name="note" class="form-control" rows="3" placeholder="Nhập ghi chú (tùy chọn)"></textarea>
          </div>
          <div id="ocr-image-preview-wrapper" class="mb-3 d-none">
            <label class="form-label">Ảnh hóa đơn đã quét</label>
            <div class="border rounded p-2 text-center">
              <img id="ocr-image-preview" alt="Ảnh hóa đơn" style="max-width:100%;max-height:240px;object-fit:contain;" />
              <div>
                <button type="button" class="btn btn-sm btn-outline-secondary mt-2" onclick="openFullOcrImage()">Mở lớn</button>
                <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="clearOcrImagePreview()">Ẩn ảnh</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="button" class="btn btn-success" onclick="saveTransaction()">
          Lưu
        </button>
      </div>
      </div>
    </div>
  </div>
</div>

<!-- Transaction Scripts (includes AI auto-categorization) -->
<script src="/js/transactions.js"></script>
