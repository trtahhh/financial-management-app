// Load Financial Overview
async function loadFinancialOverview() {
    try {
        const token = localStorage.getItem('accessToken');
        
        // Get last 3 months data
        const now = new Date();
        const threeMonthsAgo = new Date(now.setMonth(now.getMonth() - 3));
        
        const response = await fetch(`/api/transactions?from=${threeMonthsAgo.toISOString().split('T')[0]}&to=${new Date().toISOString().split('T')[0]}`, {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        
        if (response.ok) {
            const transactions = await response.json();
            
            const totalIncome = transactions.filter(t => t.type === 'income').reduce((sum, t) => sum + t.amount, 0);
            const totalExpense = transactions.filter(t => t.type === 'expense').reduce((sum, t) => sum + t.amount, 0);
            
            document.getElementById('avgIncome').textContent = formatCurrency(totalIncome / 3);
            document.getElementById('avgExpense').textContent = formatCurrency(totalExpense / 3);
            document.getElementById('avgSaving').textContent = formatCurrency((totalIncome - totalExpense) / 3);
        }
    } catch (error) {
        console.error('Error loading overview:', error);
    }
}

