            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\",\n  \"email\": \"test@example.com\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"0123456789\"\n}"
            },
            "url": {
